    <div class="row set-border mt-2 mb-4 bg-white" id="product-list-div">
        <div class="table-responsive">
            <table class="table p-2" id="product-list-table">
                <thead>
                    <tr class="text-nowrap" style="background:#A4C2F4" >
                        <th scope="col">Product Id</th>
                        <th scope="col">Product Name</th>
                        <th scope="col">CategoryId</th>
                        <th scope="col">CategoryName</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div class="col-md-4 ">
            <div class="dropdown">
                <label for="pages">Entries per page:</label>
                <select id="pages" onchange="getProduct()">
                    <option value="10" selected>10</option>
                    <option value="20">20</option>
                    <option value="30">30</option>
                    <option value="50">50</option>
                </select>
            </div>
        </div>
        <div class="col-md-4 justify-content-between">
            <div class="justify-content-md-center">
                <label class="control-label" for="Total">Total&nbsp;(<label id="total-count"></label>)&nbsp;Showing&nbsp;<label id="page-size"></label></label>
            </div>
        </div>
        <div class="col-md-4 justify-content-end">
            <div class="float-right">
                <label id="page-navigation"></label>&nbsp;&nbsp;&nbsp;&nbsp;<span onclick="getProduct('previous')"><i class="fa fa-chevron-left"></i></span>
