 <div class="modal" id="product-modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form name="frm-product" action="">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title" id="modaltitle">Add New Product</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-sm-6">
                            <label for="name">Name:</label>
                            <input type="text" class="form-control" id="name" placeholder="Enter Product Name" name="name">
                        </div>

                        <div class="form-group col-sm-6">
                          
                         <label for="status">Categeroy:</label>
                            <select class="form-control" id="selected-categeory" name="selectCategeory">
                            </select>
                        </div>
                    </div>

                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="save-button"></button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
